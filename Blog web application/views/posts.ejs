<%- include('partials/header') %>
<main>
  <h1>Blog Posts</h1>
  <ul>
    <% posts.forEach((post)=> { %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>

      <form action="/deletepost" method="POST">
        <!-- be sure to get the Name property to get the value property on the backend -->
        <input type="hidden" name="id" value="<%= post.postId %>" />
        <input type="submit" value="Delete Post" />
      </form>
    </li>
    <% }) %>
  </ul>
  <%- include('partials/footer') %>
</main>
